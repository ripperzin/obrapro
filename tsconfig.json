{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node",
      "vite/client",
      "vite-plugin-pwa/react",
      "vite-plugin-pwa/info"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "src",
    "*.ts",
    "*.tsx",
    "components",
    "utils",
    "hooks",
    "types.ts",
    "supabaseClient.ts",
    "App.tsx",
    "index.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "landing",
    ".gemini"
  ]
}